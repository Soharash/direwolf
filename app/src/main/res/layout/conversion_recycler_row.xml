<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_view_conversion_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="value"
        android:layout_marginEnd="@dimen/activity_horizontal_margin_half"
        android:layout_toStartOf="@+id/text_view_conversion_unit"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_view_conversion_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin_half"
        android:textAlignment="textEnd"
        android:text="unit"/>

</RelativeLayout>